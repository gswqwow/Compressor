<?xml version="1.0" encoding="utf-8"?>
<DirectionalLayout
        xmlns:ohos="http://schemas.huawei.com/res/ohos"
        ohos:width="match_parent"
        ohos:height="match_parent"
        ohos:top_padding="30"
        ohos:bottom_padding="30"
        ohos:left_padding="300"
        ohos:right_padding="300"
        ohos:background_element="$graphic:body_element"
        >

    <DirectionalLayout
            ohos:width="match_content"
            ohos:height="match_content"
            ohos:orientation="horizontal"
            >

        <DirectionalLayout
                ohos:width="660"
                ohos:height="match_content"
                ohos:orientation="vertical"
                ohos:background_element="$graphic:image_left_element"
                >

            <Image
                    ohos:id="$+id:actualImageView"
                    ohos:width="match_content"
                    ohos:height="400"
                    />
        </DirectionalLayout>

        <DirectionalLayout
                ohos:width="660"
                ohos:height="match_content"
                ohos:orientation="vertical"
                ohos:background_element="$graphic:image_right_element"
                >

            <Image
                    ohos:id="$+id:compressedImageView"
                    ohos:width="match_parent"
                    ohos:height="400"/>
        </DirectionalLayout>
    </DirectionalLayout>

    <DirectionalLayout
            ohos:width="match_parent"
            ohos:height="match_content"
            ohos:top_margin="2dp"
            ohos:orientation="horizontal"
            >

        <DirectionalLayout
                ohos:alignment="center"
                ohos:width="660"
                ohos:height="match_parent"
                ohos:orientation="vertical"
                >

            <Text
                    ohos:id="$+id:actualTextView"
                    ohos:width="match_content"
                    ohos:height="match_content"
                    ohos:bottom_margin="4dp"
                    ohos:right_margin="4dp"
                    ohos:text_alignment="center"
                    ohos:text="Actual Image"
                    ohos:text_size="50"/>

            <Text
                    ohos:id="$+id:actualSizeTextView"
                    ohos:width="match_content"
                    ohos:height="match_content"
                    ohos:bottom_margin="4dp"
                    ohos:right_margin="4dp"
                    ohos:text_alignment="center"
                    ohos:text="Size : -"
                    ohos:text_size="50"/>
        </DirectionalLayout>

        <DirectionalLayout
                ohos:alignment="center"
                ohos:width="660"
                ohos:height="match_parent"
                ohos:orientation="vertical"
                >

            <Text
                    ohos:id="$+id:compressedTextView"
                    ohos:width="match_content"
                    ohos:height="match_content"
                    ohos:bottom_margin="4dp"
                    ohos:right_margin="4dp"
                    ohos:text_alignment="center"
                    ohos:text="Compressed Image"
                    ohos:text_size="50"/>

            <Text
                    ohos:id="$+id:compressedSizeTextView"
                    ohos:width="match_content"
                    ohos:height="match_content"
                    ohos:bottom_margin="4dp"
                    ohos:right_margin="4dp"
                    ohos:text_alignment="center"
                    ohos:text="Size : -"
                    ohos:text_size="50"/>
        </DirectionalLayout>

    </DirectionalLayout>

    <Button
            ohos:id="$+id:chooseImageButton"
            ohos:width="match_parent"
            ohos:height="match_content"
            ohos:top_margin="8dp"
            ohos:background_element="$graphic:button_element"
            ohos:text="Choose image"
            ohos:text_size="50"/>

    <Button
            ohos:id="$+id:compressImageButton"
            ohos:width="match_parent"
            ohos:height="match_content"
            ohos:top_margin="8vp"
            ohos:background_element="$graphic:button_element"
            ohos:text="Compress image"
            ohos:text_size="50"/>

    <Button
            ohos:id="$+id:customCompressImageButton"
            ohos:width="match_parent"
            ohos:height="match_content"
            ohos:top_margin="8vp"
            ohos:background_element="$graphic:button_element"
            ohos:text="Custom compress"
            ohos:text_size="50"/>

    <Text
            ohos:id="$+id:toastTextView"
            ohos:width="match_content"
            ohos:height="match_content"
            ohos:bottom_margin="4dp"
            ohos:right_margin="4dp"
            ohos:text_alignment="center"
            ohos:text=""
            ohos:text_size="50"/>
</DirectionalLayout>
